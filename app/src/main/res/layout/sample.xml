<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:weightSum="5"
        android:orientation="horizontal"
        android:background="#1930AF"
        android:layout_width="match_parent"
        android:layout_height="100dp">
       <LinearLayout
           android:gravity="center"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="match_parent">
           <ImageView

               android:src="@drawable/image"
               android:layout_width="35dp"
               android:layout_height="35dp"></ImageView>
       </LinearLayout>
        <LinearLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#FFF"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="Do you want to exit this app?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="sans-serif-condensed"
            android:textColor="#FFF"
            android:background="#659DF3"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="If you click YES you are quite from app and if NO you go home page again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <LinearLayout
        android:gravity="end"
        android:padding="20dp"
        android:background="#1930AF"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/noButtonId"
            android:layout_marginRight="20dp"
            android:background="#659DF3"
            android:text="NO"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <Button
            android:id="@+id/yesButtonId"
            android:background="#659DF3"
            android:text="YES"
            android:textColor="#FFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
    </LinearLayout>

</LinearLayout>